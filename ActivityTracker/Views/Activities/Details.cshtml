@model ActivityTracker.Models.Activity

@{
    ViewData["Title"] = "Details " + Model.Name;
}

<div class="row">
    <div class="col-md-4 detail-column">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group" hidden>
                <input asp-for="ApplicationUserID" value="@Model.ApplicationUserID" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Name" class="form-control input-lg input-header" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div id="dates">
                <div class="form-group">
                    <div class="date-control">
                        <label>Start Date</label><br />
                        @if (ViewBag.StartDate != null)
                        {
                            @ViewBag.StartDate.ToShortDateString()
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </div>
                </div>
                <div class="form-group date-control">
                    <label>Complete</label>
                    <div id="switch" class="checkbox">
                        <label class="switch">
                            <input type="checkbox" asp-for="Complete" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div id="last-activity" class="date-control">
                        <label>Last Activity</label><br />
                        @if (ViewBag.LastActivity != null)
                        {
                            @ViewBag.LastActivity.ToShortDateString()
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FunFactor" class="control-label">Fun Factor</label>
                <input type="range" min="1" max="5" list="tickmarks" asp-for="FunFactor" class="form-control" />
                <span asp-validation-for="FunFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <input type="range" min="1" max="5" list="tickmarks" step="0.5" asp-for="Difficulty" class="form-control" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <datalist id="tickmarks">
                <option value="1" />
                <option value="2" />
                <option value="3" />
                <option value="4" />
                <option value="5" />
            </datalist>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea id="notes" asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default"><i class="far fa-save"></i> Save</button> &nbsp;|&nbsp;
                <a asp-action="Index"><i class="fas fa-arrow-up"></i> Back to
                    @((ViewBag.currentUser.UserType == "S") ? "Activities" : "Students")</a>
            </div>
        </form>
    </div>
    <div id="log" class="col-md-8">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <button id="btn-delete" onclick="return confirm('Are you sure you want to delete activity @Model.Name?')"
                    type="submit" value="Delete" class="btn btn-default detail-column">
                <i class="fas fa-trash-alt"></i> Delete Activity
            </button>
        </form>
        <h3>Log</h3>
        <a asp-controller="LogEntries" asp-action="Create" asp-route-activityid="@Model.ID" class="btn btn-default">
            <i class="fa fa-plus"></i> New Entry</a>
        <table class="table">
            <thead>
                <tr>
                    <th class="column-sm">
                        Date
                    </th>
                    <th class="text-center column-sm">
                        Hours Spent
                    </th>
                    <th>
                        Notes
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.LogEntries)
            {
                <tr>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>
                    <td class="text-center">
                        @Html.Raw(item.TimeSpent)
                    </td>
                    <td>
                        @Html.Raw(item.Notes)
                    </td>
                    <td class="text-right">
                        <a asp-controller="LogEntries" asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> &nbsp;|&nbsp;
                        <a asp-controller="LogEntries" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
