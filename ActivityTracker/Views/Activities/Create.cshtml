@model ActivityTracker.Models.Activity

@{
    ViewData["Title"] = "Create";
}

<h2>Create Activity</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <input asp-for="ApplicationUserID" class="form-control" value="@ViewBag.StudentId" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Complete</label>
                <div id="switch" class="checkbox">
                    <label class="switch">
                        <input type="checkbox" asp-for="Complete" />
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FunFactor" class="control-label">Fun Factor</label>
                <input type="range" min="1" max="5" list="tickmarks" asp-for="FunFactor" class="form-control">
                <span asp-validation-for="FunFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <input type="range" min="1" max="5" list="tickmarks" asp-for="Difficulty" class="form-control" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <datalist id="tickmarks" hidden>
                <option value="1" />
                <option value="2" />
                <option value="3" />
                <option value="4" />
                <option value="5" />
            </datalist>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default"><i class="far fa-save"></i> Save</button> &nbsp;|&nbsp;
                <a asp-action="Index"><i class="fas fa-ban"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
