@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.CurrentUserType == "S")
{
    <h2>My Activities</h2>
}
else
{
    <h2>@ViewBag.StudentName</h2>
}


<p>
    <a asp-action="Create" asp-route-id="@ViewBag.StudentId">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Activity
            </th>
            <th>
                Fun Factor
            </th>
            <th>
                Difficulty
            </th>
            <th>
                Notes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Activities)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.FunFactor
                </td>
                <td>
                    @item.Difficulty
                </td>
                <td>
                    @item.Notes
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>