@model ActivityTracker.Models.Group

@{
    ViewData["Title"] = "Create";
}

<h2>Create Group</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-default"><i class="far fa-save"></i> Save</button> &nbsp;|&nbsp;
                <a asp-action="Index" asp-controller="Students"><i class="fas fa-ban"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
