@model ActivityTracker.Models.LogEntry

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete log entry @Model.Date.ToShortDateString()?</h3>
<div>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-default"><i class="fas fa-trash-alt"></i> Delete</button> &nbsp;|&nbsp;
        <a asp-action="Details" asp-controller="Activities" asp-route-id="@Model.ActivityID">
            <i class="fas fa-ban"></i> Cancel</a>
    </form>
</div>
